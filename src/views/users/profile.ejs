<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main class="main__profile">
        
            <section class="main__profile__section">
                <h4>Perfil de usuario</h4>
                <form class="main__profile__section__form" action="">
                    <div class="profile__container">
                        <label for="nombre">Nombre: <%= firstName %></label>
                    </div>
                    <div class="profile__container">
                        <label for="apellido">Apellido: <%= lastName %></label>
                    </div>
                    <div class="profile__container">
                        <label class="input__email" for="email">Email: <%= email %></label>
                    </div>
                    <a href="/users/editProfile/<%= id %>?_method=PUT" method="POST">
                        <button type="button" class="btn btn-sm btn-outline-success border-none"><i class="fa-solid fa-pencil"></i></button>
                    </a>
                </form>
            </section>
        
    </main>
    <%- include('../partials/footer') %>
</body>
</html>