<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs') %>
    <body> 
        <%- include('../partials/header.ejs') %>
    <main class="productDetail__main">          
        <section class="productDetail__section">
            <h3><%= name %></h3>
            <article class="productDetail__article">
                <img class="productDetail__img" src="/images/productos/<%=mainImage||'ANAFE-PORTATIL-BUTANO.jpg'%>" alt="">
                <div class="detail_precio">
                    <h5 class="precio-n">$<%= toThousand(price) %></h5>
                    <h6 class="detail_discount"><%= discount %>% OFF</h6>
                </div>                                   
                <span class="b-compras">
                    <input class="b_detail_comprar" type="button" value="Comprar ahora">
                    <input class="b_detail_agregar" type="button" value="Agregar al carrito">
                </span>
                <div class="detail_mediosDePago">
                    <h5>Medios de pago:</h5>
                    <div>
                        <img src="/images/icon_visa.png" alt="visa">
                        <img src="/images/icon_mastercard.png" alt="mastercard">
                        <img src="/images/icon_paypal.png" alt="paypal">
                    </div>
                </div>
                <div class="detail_descripcion">
                    <h5>Descripción:</h5>
                    <p><%= description %></p>
                </div>              
                <div class="detail_catacteristicas">
                    <h5>Catacterísticas:</h5>
                    <p>Categoría: <%= category ? category.name : '' %></p>
                    <p>Material: <%= material ? material.name : '' %></p>
                    <p>Origen: <%= origin ? origin.name : '' %></p>
                </div>
            </article>                   
        </section>     
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>